<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="customer-session-box">
        <h3>会員の方はこちらからログイン</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"form-horizontal"}) do |f| %>

            <div class="form-group">
              <%= f.label :email, "メールアドレス", class:"col-xs-2 col-xs-offset-1 control-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xs-9 form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "パスワード", class:"col-xs-2 col-xs-offset-1 control-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class:"col-xs-9 form-control" %>
            </div>

            <div class="form-group">
              <%= f.submit "ログイン", class:"col-xs-9 col-xs-offset-3 btn btn-primary" %>
              <p class="text-right"><%= render "devise/shared/links" %></p>
            </div>
          <% end %>
      </div>
      <h2>登録がお済でない方</h2>
      <%= link_to "こちら", (new_user_registration_path) %>
       <span> から新規登録を行ってください。</span>
        </div>
      </div>
    </div>
  </div>