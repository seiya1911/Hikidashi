<div class="container">
 <h2 class="head-line title_h2 text-center">検索結果</h2>
 <div calss="row">
   <% if @items.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>画像</th>
          <th>Item名</th>
          <th>説明</th>
          <th>タグ</th>
        </tr>
      </thead>
      <tbody>
          <% @items.each do |item| %>
        <tr>
          <td><%= attachment_image_tag item, :image, fallback:"no-image.jpeg", size: '250x200' %>></td>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><% item_tags.each do |tag| %><%= tag.tag_name %><% end %></td>
        </tr>
          <% end %>
      </tbody>
    </table>
    <% else %>
      <%= render "nil_result" %>
    <% end %>
  </div>
</div>
