<div class="container">
 <h2 class="head-line title_h2 text-center">検索結果</h2>
 <div calss="row">
   <div class="d-flex justify-content-center">
      <%= render 'searches/searches_items' %>
   </div>
   <% if @items.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>画像</th>
          <th>Item名</th>
          <th>説明</th>
          <th>タグ</th>
          <th>Drawer名</th>
        </tr>
      </thead>
      <tbody>
          <% @items.each do |item| %>
        <tr>
          <td>
            <%= link_to drawer_item_path(item.drawer_id, item) do %>
              <%= attachment_image_tag item, :image, fallback:"no-image.jpeg", size: '75x75' %>
            <% end %>
          </td>
          <td>
            <%= link_to drawer_item_path(item.drawer_id, item) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.description %></td>
          <td>
            <% item.item_tags.each do |item_tag| %>
            <%= item_tag.tag.tag_name %>
            <% end %>
          </td>
          <td>
            <%= link_to drawer_path(item.drawer_id) do %>
              <%= item.drawer.name %>
            <% end %>
          </td>
        </tr>
          <% end %>
      </tbody>
    </table>
    <% else %>
      <%= render "nil_result" %>
    <% end %>
  </div>
</div>
