  <% drawers.each do |drawer| %>
<div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
    <div class="card w-100 ">
        <%= link_to drawer_path(drawer.id),style: "color: black;" do %>
      <div class="text-center">
        <%= attachment_image_tag drawer, :image, fallback: "no_image.jpg", size: '250x200' %>
      </div>
      <div class="text-center">
        <h3><%= drawer.name %></h3>
      </div>
        <% end %>
    </div>
</div>
  <% end %>